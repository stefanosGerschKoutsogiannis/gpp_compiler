πρόγραμμα τεστ
    δήλωση income, tax

    αρχή_προγράμματος
    διάβασε income;
    εάν income <= 10000 τότε
        tax := 0
    αλλιώς 
        εάν income <= 30000 τότε
            tax := (income - 10000) / 10
        αλλιώς
            εάν income <= 70000 τότε
                tax := (30000 - 10000) / 10 + (income - 30000) / 5
            αλλιώς 
                tax := (30000 - 10000) / 10 + (70000 - 30000) / 5 + (income - 70000) / 2
            εάν_τέλος
        εάν_τέλος
    εάν_τέλος;
    γράψε tax
    τέλος_προγράμματος
