πρόγραμμα τεστ
    δήλωση income, tax

    αρχή_προγράμματος
    διάβασε income ;
    εάν income <= 1000 τότε
        tax := 0
    αλλιώς 
        εάν income <= 3000 τότε
            tax := (income - 1000) / 10
        αλλιώς
            εάν income <= 7000 τότε
                tax := (3000 - 1000) / 10 + (income - 3000) / 5
            αλλιώς 
                tax := (3000 - 1000) / 10 + (7000 - 3000) / 5 + (income - 7000) / 2
            εάν_τέλος
        εάν_τέλος
    εάν_τέλος ;
    γράψε tax
    τέλος_προγράμματος
